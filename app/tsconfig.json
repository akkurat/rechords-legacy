{
	"compilerOptions": {
		"importHelpers": true,
		"target": "es6",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"preserveConstEnums": true,
		"sourceMap": true,
		"downlevelIteration": true,
		"moduleResolution": "node",
							    
		"plugins": [
			{
				"name": "typescript-plugin-add-type"
			}
		],

		"typeRoots": [
			"./node_modules/@types",
			"./node_modules"
		],
		"types": [
			"meteor-typings",
			"core-js",
			"requirejs",
			"node"
		],

		"jsx": "react"
	}
}
