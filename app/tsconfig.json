{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"es6",
			"dom.iterable",
			"dom"
		],
		"jsx": "react",
		"preserveConstEnums": true,
		"sourceMap": true,
		"allowJs": false,
		"moduleResolution": "node",
		"module": "commonjs",
		"alwaysStrict": true,
							    
		"plugins": [
			{
				"name": "typescript-plugin-add-type"
			}
		],

		"typeRoots": [
			"./type_hacks",
			"./node_modules/@types",
			"./node_modules"
		],
		"types": [
			"meteor-typings",
			"core-js",
			"requirejs"
		]
	}
}
